					  Fill="{TemplateBinding Foreground}"/>
			</Canvas>
		</Viewbox>
	</ControlTemplate>

	<ControlTemplate x:Key="Icon_Minimize" TargetType="{x:Type theme:XamlImage}">
		<Viewbox>
			<Canvas Width="24"
					Height="16"
					SnapsToDevicePixels="False"
					UseLayoutRounding="False">
				<Path Data="M6 11H18V13H6V11Z" 
					  Fill="{TemplateBinding Foreground}"/>
			</Canvas>
		</Viewbox>
	</ControlTemplate>

