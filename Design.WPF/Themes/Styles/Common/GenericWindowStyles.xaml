						</Grid.Background>
						<AdornerDecorator>
							<ContentPresenter />
						</AdornerDecorator>
						<ResizeGrip x:Name="WindowResizeGrip"
									  HorizontalAlignment="Right"
									  VerticalAlignment="Bottom"
									  Visibility="Collapsed"
									  IsTabStop="false" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="ResizeMode" Value="CanResizeWithGrip">
